{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "*.ts",
    "public/**/*.ts",
    "public/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
